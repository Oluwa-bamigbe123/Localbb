@model LocalBetBiga.Models.ViewModel.EditEquipmentVM
@{
    Layout = "";
}

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventorySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
 
</head>

<div class="text-center" style="margin-top: 50px">
    <h2 class="text-primary">Edit Equipment</h2>
</div>


<form method="post" asp-action="Edit">
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
        <div class="border pt-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NumberToBeAdded" class="control-label"></label>
                <input asp-for="NumberToBeAdded" class="form-control" />
                <span asp-validation-for="NumberToBeAdded" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />

                <a asp-action="Index" asp-controller="Equipment" class="btn btn-success">
                    Back
                </a>
            </div>
          

        </div>
        </div>

    

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
