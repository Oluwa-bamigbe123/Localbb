@model LocalBetBiga.Models.ViewModel.AssignEquipmentToAgentVM

@{
    Layout = "_ManagerDashboardLayout";
    ViewData["pageTitle"] = "Assign Equipment To Agent";
}
<form method="post" asp-action="AssignEquipmentToAgent">
    <div class="form-group">
        <label asp-for="EquipmentType" class="control-label">Select Equipment</label>
        <select asp-for="EquipmentType" asp-items="@Model.EquipmentNameSelectList" class="form-control">
            <option disabled selected>--Select Equipment--</option>

        </select>
        <span asp-validation-for="EquipmentType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BrandName" class="control-label">Select Equipment</label>
        <select asp-for="BrandName" asp-items="@Model.EquipmentBrandSelectList" class="form-control">
            <option disabled selected>--Select Brand--</option>

        </select>
        <span asp-validation-for="BrandName" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label asp-for="NameOfAgent"></label>
            <input asp-for="NameOfAgent" />
            <span asp-validation-for="NameOfAgent" class="text-danger"></span>

        </div>


        <div class="form-group">
            <label asp-for="NumberOfEquipmentAssigned"></label>
            <input asp-for="NumberOfEquipmentAssigned" />
            <span asp-validation-for="NumberOfEquipmentAssigned" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label asp-for="ShopAddress"></label>
            <input asp-for="ShopAddress" />
            <span asp-validation-for="ShopAddress" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="DateAssigned"></label>
            <input asp-for="DateAssigned" />
            <span asp-validation-for="DateAssigned" class="text-danger"></span>

        </div>

    <br />
    <input type="submit" class="btn btn-primary" value="ASSIGN" />

</form>
