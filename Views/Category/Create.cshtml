@model LocalBetBiga.Models.Entities.Category
@{
    Layout = "";
}

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventorySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/create.css" />
</head>

<form method="post" asp-action="Create">
    <div>
        <div class="border pt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row topbar">
                <h2 class="pl-3"> Create Category</h2> 
            </div>
            <div class="card cardio">
                <div class="form-group col-md-6">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                    <div class="card-footer foots">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />

                            <a asp-action="Index" class=" btn btn-primary">Back</a>

                        </div>

                    </div>
                </div>
            </div>

        </div>
 
</form>
