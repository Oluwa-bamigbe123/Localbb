@model IEnumerable<LocalBetBiga.Models.Entities.Category>
@{
    Layout = "";
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventorySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="text-center " style="margin-top: 50px">
    <h2 class="text-primary">Category List</h2>
</div>



@if (Model.Count() > 0)
{

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Category Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.CategoryName</td>

                        <td>

                            
                            <a asp-action="Details" asp-route-id="@obj.Id" class="btn btn-success">
                                Details
                            </a> 
                            <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                Delete
                            </a> 
                            <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning">
                                Edit
                            </a> 
                        </td>

                    </tr>

                }
            </tbody>
        </table>
    </div>



}
else
{
    <p> Oops No Category  Yet</p>
}

<div class="text-center">
    <h2>
        <a asp-controller="Category" asp-action="Create" class="btn btn-success">
            Create New Category
        </a>
    </h2>
</div>
